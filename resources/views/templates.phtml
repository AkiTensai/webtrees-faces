<script type="javascript/template" id="faces-person-template">
    <span class="faces-person-wrapper">
        {% if (o.link !== '#') { %}
        <a href="{%=o.link%}"
           data-pid="{%=o.person.pid%}"
           data-key="{%=o.key%}"
           class="faces-person-name">{%=o.person.name%}</a>
        {% } else { %}
        <span data-pid="{%=o.person.pid%}"
              data-key="{%=o.key%}"
              class="faces-person-name">{%=o.person.name%}</span>
        {% } %}
        {% if (o.edit) { %}
            <span class="faces-person-detach"
                  data-pid="{%=o.person.pid%}"
                  data-name="{%=o.person.name%}">(&times;)</span>
        {% } %}
        <span class="faces-person-separator">, </span>
    </span>
</script>