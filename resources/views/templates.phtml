<script type="javascript/template" id="faces-tooltip-template">
    <div class="faces-tooltip-wrapper">
        <p class="faces-tooltip-name">{%=o.person.name%}</p>
        <p class="faces-tooltip-life">{%=o.person.life%}</p>
    </div>
